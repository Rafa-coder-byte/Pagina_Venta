@{

}
<ol class="breadcrumb mb-4  mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item active">Usuario</li>
</ol>

<div class="card">
    <div class="card-header">

        <i class="fas fa-users me-1"> </i> Lista de Usuarios
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal()">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <div class="table-responsive"> 
            <table id="tabla" class="display cell-border" style="width: 100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                         <th>Correo</th>
                        <th>Activo</th> 
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>

            </table>
         </div> 

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="formModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Understood</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
      
    <script>

        var tabladata;

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            
            "ajax": {
                url: '@Url.Action("ListarUsuarios", "Home")',
                type: "GET",
                dataType: "json",

            },
            "columns": [
                { data: "nombre", responsivePriority: 1 },
                { data: "apellidos", responsivePriority: 2 },
                { data: "correo", responsivePriority: 3 },
                {
                    data: "activo", responsivePriority: 4, "render": function (valor) {
                        if (valor) {
                            return '<span  class="badge bg-success">Sí</span>'
                        }
                        else {
                            return '<span  class="badge bg-danger">No</span>'
                        }
                    }
                },

                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm"><i class="fas fa-pen"> </i></button>' +
                    '<button type="button" class="btn btn-danger btn-sm ms-2 "><i class="fas fa-trash"> </i></button>',
                    "orderable" : false,
                    "searchable" : false,
                    "width": "90px",
                }
            ],
                    "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
            }

        });


        function abrirModal(){
            $("#formModal").modal("show");
        }



    </script>
}




